{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "HDI",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/harry12322/Assignment2/main/Assignment2/js/ne_110m.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/harry12322/homework_week10/main/data/countries.csv"
        },
        "key": "Country",
        "fields": ["HDI"]
      }
    },
    {"calculate": "datum.HDI", "as": "HDI"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "HDI",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "HDI", "type": "quantitative"}
    ]
  }

}
